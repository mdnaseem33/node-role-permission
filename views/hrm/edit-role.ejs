<section class="app-user-edit">
    <div class="card">
        <div class="card-header border-bottom p-1">
            <div class="head-label">
                <h6 class="mb-0">Role Update</h6>
            </div>
        </div>
        <div class="card-body">
            <form class="mt-3" action="/roles/<%=data.role._id%>/edit" method="post">
                <div class="row">
                    <div class="col-md-4 col-12">
                        <label for="validationTooltip01">Role name</label>
                        <input name="name" type="text" class="form-control" id="validationTooltip01" placeholder="Role name" value="<%=data.role.name%>" required="">
                       
                    </div>
                    <div class="col-12">
                        <div class="table-responsive border rounded mt-1">
                            <h6 class="py-1 mx-1 mb-0 font-medium-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock font-medium-3 mr-25"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                                <span class="align-middle">Permission</span>
                            </h6>
                            <table class="table table-striped table-borderless">
                                <tbody>
                                    <% for (let group in data.permission) {
                                        if (data.permission.hasOwnProperty(group)) { %>
                                            <tr>
                                                <td><%=group%></td>
                                                
                                           
                                    <%        data.permission[group].forEach(per => { %>
                                                <td>
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" id="<%=per.name%>" name="permission" value="<%=per.name%>" <%=data.role.permissions.includes(per.name)?"checked":""%> >
                                                        <label class="custom-control-label" for="<%=per.name%>"><%= per.view %></label>
                                                    </div>
                                                </td>
                                    <%        });
                                        } %>
                                    </tr>
                                    <% } %>
                                                                        
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-12 d-flex flex-sm-row flex-column mt-2">
                        <button type="submit" class="btn btn-primary mb-1 mb-sm-0 mr-0 mr-sm-1 waves-effect waves-float waves-light">Save Changes</button>
                        <button type="reset" class="btn btn-outline-secondary waves-effect">Reset</button>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
</section>